@model WebApplication7.ViewModels.TransactionWithdrawalMoneyViewModel

@{
    ViewData["Title"] = "Withdrawal";
}

<div class="card">
    <div class="card-header card-header-warning">
        <h3>Withdrawal money</h3>
    </div>
    <div class="card-body">
        <form method="post" asp-action="WithdrawalMoney">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="AccountId" class="bmd-label-floating">From Account Id</label>
                        <input asp-for="AccountId" class="form-control">
                        <span asp-validation-for="AccountId" class="field-validation-error"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="AmountToSend" class="bmd-label-floating">Amount</label>
                        <input asp-for="AmountToSend" class="form-control">
                        <span asp-validation-for="AmountToSend" class="field-validation-error"></span>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="MessageForSender" class="bmd-label-floating">Message</label>
                        <input asp-for="MessageForSender" class="form-control" rows="5" />
                        <span asp-validation-for="MessageForSender" class="field-validation-error"></span>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary pull-right">Withdrawl</button>
            <div class="clearfix"></div>
        </form>
    </div>
</div>