@model WebApplication7.ViewModels.CustomerCustomerProfileViewModel
@{
    ViewData["Title"] = "Customer Profile";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-plain">
                <div class="card-header card-header-primary">
                    <p class="card-category">Name</p>
                    <h4 class="card-title mt-0">@Model.Givenname @Model.Surname</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="">
                                <tr>
                                    <th>Customer Id</th>
                                    <th>EmailAddress</th>
                                    <th>Birthday</th>
                                    <th>Country</th>
                                    <th>Country Code</th>
                                    <th>City</th>
                                    <th>StreetAddress</th>
                                    <th>Gender</th>
                                    <th>Zipcode</th>
                                    <th>Personal number</th>
                                    <th>Telephonenumber Country Code</th>
                                    <th>Telephonenumber</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.Id</td>
                                    <td>@Model.Emailaddress</td>
                                    <td>@($"{@Model.Birthday:d}")</td>
                                    <td>@Model.Country</td>
                                    <td>@Model.CountryCode</td>
                                    <td>@Model.City</td>
                                    <td>@Model.Streetaddress</td>
                                    <td>@Model.Gender</td>
                                    <td>@Model.Zipcode</td>
                                    <td>@Model.NationalId</td>
                                    <td>@Model.TelephoneCountryCode</td>
                                    <td>@Model.Telephonenumber</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-12">
    <div class="card">
        <div class="card-header card-header-primary">
            <h4 class="card-title ">Account Info</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead class=" text-primary">
                        <tr>
                            <th>ID</th>
                            <th>Balance</th>
                            <th>Type</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            @foreach (var i in Model.Dispositions)
                            {
                                <td>
                                    <a asp-action="TransactionsForCustomer" asp-route-id="@i.AccountId">
                                        <h3>@i.AccountId</h3>
                                    </a>
                                </td>
                                <td>
                                    <h3>@($"{i.Account.Balance:C}")</h3>
                                </td>
                                <td>
                                    <h3>@i.Type</h3>
                                </td>
                            }
                        </tr>
                    </tbody>
                </table>
            </div>
            <h3>Total balance: @($"{Model.TotalBalance:c}")</h3>
        </div>
    </div>
</div>